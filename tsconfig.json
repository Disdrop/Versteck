{
  "compilerOptions": {
    "target": "ES2024",
    "module": "Node16",
    "rootDir": "./src/",
    "moduleResolution": "node16",
    "outDir": "./dist/",
    "removeComments": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
